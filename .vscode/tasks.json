{
    "version": "0.1.0",
    "tasks": [
        {
            "taskName": "build",
            "command": "call",
            "isShellCommand": true,
            "args": [
                "\"${cwd}\"\\misc\\build.bat \"${cwd}\" main"
            ],
            "showOutput": "always"
        },
        {
            "taskName": "build_run",
            "command": "call",
            "isShellCommand": true,
            "args": [
                "\"${cwd}\"\\misc\\build_run.bat \"${cwd}\" main main.exe"
            ],
            "showOutput": "always"
        },
        {
            "taskName": "run",
            "command": "call",
            "isShellCommand": true,
            "args": [
                "\"${cwd}\"\\bin\\main.exe"
            ],
            "showOutput": "always"
        },
        {
            "taskName": "debug in visual studio",
            "command": "call",
            "isShellCommand": true,
            "args": [
                "\"${cwd}\"\\misc\\debug.bat \"${cwd}\" main main.exe"
            ],
            "showOutput": "always"
        }
    ]
}